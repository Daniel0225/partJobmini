<!--pages/mine/setting/realuth.wxml-->
<view class="page">
  <view class="titleLabel">实名认证</view>
  <text class="tipLabel">为了保证平台用户信息的真实性、安全性，请积极进行实名认证</text>
  <view class="nameLabel">
    <text>真实姓名</text>
    <input bindinput="nameInput" placeholder="请输入姓名" type="text"></input>
  </view>
  <view class="idcardLabel">
    <text>身份证号码</text>
    <input bindinput="idcardNoInput" placeholder="请输入身份证号码" type="text"></input>
  </view>
  <button class="subButton">提交认证</button>
</view>
