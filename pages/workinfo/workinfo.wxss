/* pages/workinfo/workinfo.wxss */
.rootView{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.controlView{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  border-width: 2rpx 0 0 0;
  border-style: solid;
  border-top-color: #DDDDDD
}
.signIn{
  width: 26%;
  color: #F1924A;
  background-color: #FFFFFF;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.signUp{
  width: 48%;
  color: #FFFFFF;
  background-color: #F1924A;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.topInfo{
  width: 100%;
  padding: 25rpx;
  display: flex;
  flex-direction: column
}
.titleView{
  width: 70%;
  font-size: 35rpx;
  font-weight: 600
}
.priceView{
  font-size: 30rpx;
  margin-left: 10rpx;
  color: #F1924A;
  margin-top: 10rpx;
  position: absolute;
  right: 25rpx
}
.countView{
  font-size: 25rpx;
  margin-top: 20rpx;
}
.dividerView{
  background-color: #EEEEEE;
  width: 100%;
  height: 20rpx;
}
.contentLabel{
  font-size: 30rpx;
  font-weight: 600;
}
.contentContain{
  width: 100%;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.content{
  font-size: 30rpx;
  margin-top: 20rpx;
  height: 250rpx;
  word-break: break-all;
}
.remarkView{
  font-size: 30rpx;
  color: #444444;
  word-break: break-all;
}
.dividerLine{
  height: 2rpx;
  background-color: #DDDDDD;
  margin-top: 20rpx;
}
.locationView{
  font-size: 25rpx;
  line-height: 34rpx;
  vertical-align: center;
  display: flex;
  flex-direction:row;
  margin-top: 10rpx
}
.locationViewText{
  font-size: 25rpx;
  line-height: 34rpx;
  text-align: center;
}
.locationInfo{
  font-size: 25rpx;
  margin-top: 10rpx;
}
.positionImage{
  width: 26rpx;
  height: 34rpx;
  margin-left: 20rpx;
}
.warmTitle{
  font-size: 25rpx;
  color: red;
  margin-left: 5rpx;
  margin-bottom: 10rpx
}
.warmImage{
  width: 38rpx;
  height: 32rpx;
}
.warmText{
  font-size: 25rpx;
  color: #999999
}